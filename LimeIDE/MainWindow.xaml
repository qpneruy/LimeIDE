<Window x:Class="LimeIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LimeIDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="White">
    <Grid>
        <TextBlock x:Name="ValueTexbox"></TextBlock>
        <TextBox x:Name="inputTextBox" BorderBrush="Aqua" HorizontalAlignment="Left" VerticalAlignment="Center" Width="318" Margin="248,0,0,0" Height="28"/>
        <Button Click="Button_Click" Content="Start" Margin="342,274,328,90" BorderBrush="#FFF70000">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.6,2" StartPoint="0.5,0">
                    <GradientStop Color="Cyan" Offset="1"/>
                    <GradientStop Color="#FF76CC5F"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
